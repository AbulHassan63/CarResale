@model CarResale.Models.CarRegister
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CarRegister</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/Jscustom.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="offset-md-4 col-md-4">
                <form asp-controller="Master" asp-action="CarRegister" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <h2>Car Register</h2>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-11">
                                <label asp-for="Man_id" class="control-label">Manufacturer</label>
                                <select asp-for="Man_id" class="form-control" asp-items="@(new SelectList(Model.CarManinfo,"Man_id","Man_name"))"></select>
                            </div>

                            <div class="col-md-1" style="margin-top: 30px;">
                                <button class="btn btn-primary" id="btnman" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-11">
                                <label asp-for="Brand_id" class="control-label">Brand</label>
                                <select asp-for="Brand_id" class="form-control"></select>
                            </div>
                            <div class="col-md-1" style="margin-top: 30px;">
                                <button class="btn btn-primary" id="btnbrand" type="button">+</button>
                            </div>
                        </div>


                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-11">
                                <label asp-for="Model_id" class="control-label">Model</label>
                                <select asp-for="Model_id" class="form-control"></select>
                            </div>
                            <div class="col-md-1" style="margin-top: 30px;">
                                @*<button class="btn btn-primary" id="btnmodel" type="button">+</button>*@
                                <a asp-action="AddModel" asp-controller="Admin"><button class="btn btn-primary" type="button"> +</button></a>

                            </div>
                        </div>                       
                      
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="YearBuild" class="control-label">Year Build</label>
                                <input asp-for="YearBuild" class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Kilometer_Coverd" class="control-label">Kilometer Covered</label>
                                <input asp-for="Kilometer_Coverd" class="form-control" type="text" />
                            </div>
                        </div>
                    </div>
                   
                   
                    <div class="form-group">
                        <label class="control-label">Upload images</label>
                        <input type="file" name="Images" multiple="multiple" />
                    </div>
                    <div class="form-group">
                        <button type="submit" id="btnsave" class="btn btn-success">Save</button>
                        <button type="button" id="btnclear" class="btn btn-info">Clear</button>
                    </div>

                    <div>
                        <br />
                        <a asp-action="Dashboard1"><button class="btn btn-dark" type="button"> Go to Dashboard</button></a>

                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
